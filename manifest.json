{
    "manifest_version": 3,
    "name": "Floating UI Extension",
    "version": "1.0",
    "description": "A draggable, circular GIF display extension with floating UI.",
    "permissions": ["storage"],
    "host_permissions": ["<all_urls>"],
    "action": {
  "default_popup": "popup.html",
  "default_icon": "assets/icon.png",
  "default_title": "Floating Extension"
},
    "web_accessible_resources": [
      {
        "resources": ["assets/*"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  